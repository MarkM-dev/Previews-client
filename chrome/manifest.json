{
  "manifest_version": 2,
  "name": "Twitch Previews",
  "description": "Live previews when hovering over streams on twitch | A bunch of quality of life improvement features to twitch.",
  "version": "1.8",
  "permissions": ["storage"],
  "background": {
    "scripts": ["main/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "css": ["main/css.css"],
      "js": ["main/core.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/TP16.png",
    "24": "images/TP24.png",
    "48": "images/TP48.png"
  },
  "browser_action": {
    "default_icon": "images/TP48.png",
    "default_popup": "popups/popup.html",
    "default_title": "Twitch Previews"
  },
  "web_accessible_resources": ["images/tpt.png", "images/TP96.png", "images/tp_sidebar_search.png", "images/tp_fScrnWithChat.png", "images/tp_sidebar_search_close.png", "images/tp_offline.jpg", "images/coffee.png"],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
