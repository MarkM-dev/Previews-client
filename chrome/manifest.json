{
  "manifest_version": 2,
  "name": "Twitch Previews",
  "description": "Live previews when hovering over streams on twitch | A bunch of quality of life improvement features to twitch.",
  "version": "1.9.4.2",
  "permissions": ["storage"],
  "background": {
    "scripts": ["main/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "css": ["main/css.css", "main/settings.css", "main/APS_settings.css"],
      "js": ["main/core.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/TP16.png",
    "24": "images/TP24.png",
    "32": "images/TP32.png",
    "48": "images/TP48.png",
    "64": "images/TP64.png",
    "128": "images/TP128.png"
  },
  "browser_action": {
    "default_icon": "images/TP48.png",
    "default_title": "Twitch Previews"
  },
  "web_accessible_resources": ["images/tpt.png", "images/vidPreviewVolBtn.png", "images/TP96.png", "images/tp_sidebar_search.png", "images/tp_fScrnWithChat.png", "images/tp_sidebar_search_close.png", "images/tp_offline.jpg", "images/coffee.png", "images/expand.png", "images/translate.png", "images/gamepad_idle.png","images/gamepad_active.png","images/multistream.png","images/multistream_sidebar.png","images/pip.png", "main/settings.html", "main/APS_settings.html"],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
