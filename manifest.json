{
  "manifest_version": 2,
  "name": "Twitch Previews",
  "description": "Twitch Previews - a live video or image preview window on twitch.",
  "version": "1.3.0",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "css": ["css.css"],
      "js": ["core.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "TP16.png",
    "24": "TP24.png",
    "48": "TP48.png"
  },
  "browser_action": {
    "default_icon": "TP48.png",
    "default_popup": "popup.html",
    "default_title": "Twitch Previews"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
